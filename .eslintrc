{
	rules: {
		semi: ['error', 'always'],
		indent: ['error', 'tab'],
		'no-tabs': 0,
		'no-extra-semi': 'error'
	},
	'env': {
		'node': true,
		'mocha': true,
		'es6': true
	},
	'ecmaFeatures': {
		'blockBindings': true,
		'prefer-const': 2,
		'prefer-template': 2
	},
	'extends': 'eslint:recommended',
	'parserOptions': {
		'ecmaVersion': 10
	}
}
